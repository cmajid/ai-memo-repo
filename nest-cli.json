{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/passport/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "webpack": true,
    "tsConfigPath": "apps/passport/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/memo-service",
  "projects": {
    "memo-service": {
      "type": "application",
      "root": "apps/memo-service",
      "entryFile": "main",
      "sourceRoot": "apps/memo-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/memo-service/tsconfig.app.json"
      }
    },
    "logger": {
      "type": "library",
      "root": "libs/logger",
      "entryFile": "index",
      "sourceRoot": "libs/logger/src",
      "compilerOptions": {
        "tsConfigPath": "libs/logger/tsconfig.lib.json"
      }
    },
    "passport": {
      "type": "application",
      "root": "apps/passport",
      "entryFile": "main",
      "sourceRoot": "apps/passport/src",
      "compilerOptions": {
        "tsConfigPath": "apps/passport/tsconfig.app.json"
      }
    },
    "billing": {
      "type": "application",
      "root": "apps/billing",
      "entryFile": "main",
      "sourceRoot": "apps/billing/src",
      "compilerOptions": {
        "tsConfigPath": "apps/billing/tsconfig.app.json"
      }
    },
    "order": {
      "type": "application",
      "root": "apps/order",
      "entryFile": "main",
      "sourceRoot": "apps/order/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}