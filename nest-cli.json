{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/application/memo-service/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "webpack": true,
    "tsConfigPath": "apps/application/memo-service/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/application/memo-service",
  "projects": {
    "memo-service": {
      "type": "application",
      "root": "apps/application/memo-service",
      "entryFile": "main",
      "sourceRoot": "apps/application/memo-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/application/memo-service/tsconfig.app.json"
      }
    },
    "ai-service": {
      "type": "application",
      "root": "apps/application/ai-service",
      "entryFile": "main",
      "sourceRoot": "apps/application/ai-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/application/ai-service/tsconfig.app.json"
      }
    },
    "logger": {
      "type": "library",
      "root": "libs/logger",
      "entryFile": "index",
      "sourceRoot": "libs/logger/src",
      "compilerOptions": {
        "tsConfigPath": "libs/logger/tsconfig.lib.json"
      }
    },
    "passport": {
      "type": "application",
      "root": "apps/application/passport",
      "entryFile": "main",
      "sourceRoot": "apps/application/passport/src",
      "compilerOptions": {
        "tsConfigPath": "apps/application/passport/tsconfig.app.json"
      }
    }
  }
}