{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/auth/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "webpack": true,
    "tsConfigPath": "apps/auth/tsconfig.app.json",
    "assets": [
      "**/*.proto"
    ]
  },
  "monorepo": true,
  "root": "apps/memo-service",
  "projects": {
    "memo-service": {
      "type": "application",
      "root": "apps/memo-service",
      "entryFile": "main",
      "sourceRoot": "apps/memo-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/memo-service/tsconfig.app.json"
      }
    },
    "clogger": {
      "type": "library",
      "root": "libs/logger",
      "entryFile": "index",
      "sourceRoot": "libs/logger/src",
      "compilerOptions": {
        "tsConfigPath": "libs/logger/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json",
        "assets": [
          "**/*.proto"
        ],
        "watchAssets": true
      }
    },
    "text": {
      "type": "application",
      "root": "apps/text",
      "entryFile": "main",
      "sourceRoot": "apps/text/src",
      "compilerOptions": {
        "tsConfigPath": "apps/text/tsconfig.app.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    }
  }
}